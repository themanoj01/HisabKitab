@page "/dashboard"
@using HisabKitab.Model
@inject ITransactionService TransactionService
@inject IDebtService DebtService

<div class="container mt-4">
    <!-- Top Section: Overview Cards -->
    <div class="row mb-4">
        <div class="col-12 col-md-3 mb-3">
            <div class="card text-center bg-light">
                <div class="card-body">
                    <h6 class="card-title">Total Inflows</h6>
                    <h4 class="card-text text-success">@TotalInflows</h4>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3 mb-3">
            <div class="card text-center bg-light">
                <div class="card-body">
                    <h6 class="card-title">Total Outflows</h6>
                    <h4 class="card-text text-danger">@TotalOutflows</h4>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3 mb-3">
            <div class="card text-center bg-light">
                <div class="card-body">
                    <h6 class="card-title">Balance</h6>
                    <h4 class="card-text text-primary">@Balance</h4>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3 mb-3">
            <div class="card text-center bg-light">
                <div class="card-body">
                    <h6 class="card-title">Pending Debts</h6>
                    <h4 class="card-text text-warning">@PendingDebts</h4>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3 mb-3">
            <div class="card text-center bg-light">
                <div class="card-body">
                    <h6 class="card-title">Total Transaction</h6>
                    <h4 class="card-text text-primary">@TotalTransaction</h4>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3 mb-3">
            <div class="card text-center bg-light">
                <div class="card-body">
                    <h6 class="card-title">Total no of Transaction</h6>
                    <h4 class="card-text text-primary">@NoOfTotalNoOfTransaction</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Middle Section: Recent Transactions -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Recent Transactions</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-bordered table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>S.N.</th>
                        <th>Amount</th>
                        <th>Type</th>
                        <th>Date</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    @if (RecentTransactions != null && RecentTransactions.Any())
                    {
                        int serial = 1;
                        @foreach (var transaction in RecentTransactions)
                        {
                            
                     
                            <tr>
                                <td>@serial</td>
                                <td>@transaction.Amount</td>
                                <td>@transaction.Type</td>
                                <td>@transaction.Date.ToShortDateString()</td>
                                <td>@transaction.Notes</td>
                            </tr>
                            serial++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No recent transactions found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bottom Section: Pending Debts -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Pending Debts</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-bordered table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>S.N.</th>
                        <th>Source</th>
                        <th>Amount</th>
                        <th>Due Date</th>
                    </tr>
                </thead>
                <tbody>
                    @if (PendingDebtList != null && PendingDebtList.Any())
                    {
                        int serial = 1; 
                        @foreach (var debt in PendingDebtList)
                        {
                            <tr>
                                <td>@serial</td>
                                <td>@debt.Source</td>
                                <td>@debt.Amount</td>
                                <td>@debt.DueDate.ToShortDateString()</td>
                            </tr>
                            serial++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">No pending debts found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


